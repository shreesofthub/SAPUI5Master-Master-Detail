<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">
    <VBox>
        <form:SimpleForm id="idFruitForm" title="Fruit-{name} Details">
            <Label text="Fruit Name"></Label>
            <Text text="{name}"></Text>
            <Label text="Fruit Image"></Label>
            <Image src="{image}" height="30px" width="30px"></Image>
            <Label text="Fruit Benifit"></Label>
            <Text text="{benifit}"></Text>
            <Label text="Price"></Label>
            <Text text="{price}"></Text>
            <Label text="Units"></Label>
            <Text text="{unit}"></Text>
            <Label text="Color"></Label>
            <Text text="{color}"></Text>
        </form:SimpleForm>
        <form:SimpleForm id="idFlowerForm" title="Flower-{name} Details">
            <Label text="FlowerName"></Label>
            <Text text="{productId}-{name}"></Text>
            <Label text="Flower Image"></Label>
            <Image src="{image}" height="30px" width="30px"></Image>
            <Label text="Flower category"></Label>
            <Text text="{category}"></Text>
            <Label text="Price"></Label>
            <Text text="{price}"></Text>
            <Label text="Units"></Label>
            <Text text="{unit}"></Text>
            <Label text="Instructions"></Label>
            <Text text="{instructions}"></Text>
        </form:SimpleForm>
    </VBox>
</core:FragmentDefinition>